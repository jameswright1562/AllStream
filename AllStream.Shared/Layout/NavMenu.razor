@using Microsoft.AspNetCore.Components.Routing

<header class="app-header">
    <div class="brand">
        <div class="brand-title">AllStream</div>
    </div>

    <nav class="nav-desktop">
        <NavItem Href="" Match="NavLinkMatch.All" Label="Home" Icon="home" />
        <NavItem Href="movies" Label="Movies" Icon="movies" />
        <NavItem Href="tv" Label="TV Series" Icon="tv" />
        <NavItem Href="cdnsports" Label="Live Sports" Icon="sports" />
    </nav>

    <button class="nav-toggle" type="button" @onclick="OnToggleNav" aria-label="Open navigation">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
             fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 12h18M3 6h18M3 18h18" />
        </svg>
    </button>
</header>

@code {
    [Parameter] public EventCallback OnToggleNav { get; set; }
}
