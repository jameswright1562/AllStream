<div class="bg-gray-800 border border-gray-700 rounded-lg shadow-sm overflow-hidden flex flex-col h-full">
    @if (!string.IsNullOrWhiteSpace(PosterUrl))
    {
        <img class="w-full h-96 object-cover" src="@PosterUrl" alt="@Title" />
    }
    <div class="p-4 flex flex-col flex-grow">
        <h5 class="text-lg font-semibold text-white mb-2 flex justify-between items-start gap-2">
            <span class="line-clamp-2">@Title</span>
            @if (!string.IsNullOrWhiteSpace(Year))
            {
                <span class="px-2 py-0.5 text-xs font-semibold bg-gray-700 text-gray-300 rounded shrink-0">@Year</span>
            }
        </h5>
        <div class="mt-auto pt-4 flex gap-2">
             <a class="block w-full text-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors font-medium" href="@LinkUrl">@LinkText</a>
        </div>
    </div>
</div>

@code {
    [Parameter] public string PosterUrl { get; set; } = "";
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Year { get; set; } = "";
    [Parameter] public string LinkUrl { get; set; } = "#";
    [Parameter] public string LinkText { get; set; } = "Details";
}
